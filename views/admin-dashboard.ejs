      </svg>
      <span>Deleting...</span>
    `;

        try {
          const response = await fetch(`/admin/employees/${employeeId}`, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' },
          });

          if (response.ok) {
            closeDeleteModal();
            alert('Employee and all associated data deleted successfully');
            window.location.reload();
          } else {
            const error = await response.json();
            alert(error.message || 'Failed to delete employee');
            this.disabled = false;
            this.innerHTML = `
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          <span>Delete Employee</span>
        `;
          }
        } catch (error) {
          console.error('Delete error:', error);
          alert('An error occurred while deleting the employee');
          this.disabled = false;
          this.innerHTML = `
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        <span>Delete Employee</span>
      `;
        }
      });

      // ── Status modal ───────────────────────────────────────
      function toggleUserStatus(btn, name, userId) {
        const id = btn.dataset.id;
        const isActive = btn.dataset.active === 'true';
        document.getElementById('statusTitle').textContent = isActive
          ? 'Deactivate User'
          : 'Activate User';
        document.getElementById('statusMessage').textContent = isActive
          ? 'This user will lose access.'
          : 'This user will regain access.';
        document.getElementById('statusEmployeeName').textContent = name;
        document.getElementById('statusEmployeeUserId').textContent = userId;
        const badge = document.getElementById('currentStatusBadge');
        badge.textContent = isActive ? 'Inactive' : 'Active';
        badge.style.color = isActive ? '#f43f5e' : '#10b981';
        const modal = document.getElementById('statusModal');
        const box = document.getElementById('statusModalContent');
        modal.classList.remove('hidden');
        requestAnimationFrame(() => box.classList.add('open'));
        document.getElementById('confirmStatusBtn').onclick = async () => {
          try {
            const res = await fetch(`/admin/employees/${id}/toggle-status`, {
              method: 'PATCH',
              headers: { 'Content-Type': 'application/json' },
